---
import { types } from "../data/types";
const id = Astro.params.id;
const info = types.find((b) => b.id === id) || null;
---

<div class="flex flex-col gap-5">
    <div>
        <button
            class="rounded-[10px] border-1 border-[#00000050] py-1 px-2 text-[10px] hover:bg-[#00000030] transition"
            >TODOS LOS TIPOS</button
        >
        {
            info.subtypes.map(({ name }) => (
                <button class="ml-[10px] rounded-[10px] border-1 border-[#00000050] py-1 px-2 text-[10px] hover:bg-[#00000030] transition">
                    {name}
                </button>
            ))
        }
    </div>
    <div class="flex gap-10">
        {
            info.searchValues.map(({ name }) => {
                if (name === "Exterior") {
                    return (
                        <input
                            class="rounded-[10px] border-1 border-[#00000050] py-1 px-2 text-[10px] hover:bg-[#00000030] focus:bg-[#00000030] transition "
                            type="number"
                            placeholder="Exterior (mm)"
                            min="1"
                        />
                    );
                } else if (name === "Interior") {
                    return (
                        <input
                            class="rounded-[10px] border-1 border-[#00000050] py-1 px-2 text-[10px] hover:bg-[#00000030] focus:bg-[#00000030] transition "
                            type="number"
                            placeholder="Interior (mm)"
                            min="1"
                        />
                    ); 
                } else if (name === "Altura") {
                    return (
                        <input
                            class="rounded-[10px] border-1 border-[#00000050] py-1 px-2 text-[10px] hover:bg-[#00000030] focus:bg-[#00000030] transition "
                            type="number"
                            placeholder="Altura (mm)"
                            min="0"
                        />
                    );
                }
                return null;
            })
        }
    </div>

    <script>
        document.querySelectorAll("button").forEach((button) => {
            button.addEventListener("click", () => {
                document.querySelectorAll("button").forEach((btn) => {
                    btn.classList.remove(
                        "bg-amber-500",
                        "text-white",
                        "border-[#00000000]",
                    );
                });
                button.classList.add(
                    "bg-amber-500",
                    "text-white",
                    "border-[#00000000]",
                );
            });
        });
    </script>
</div>
